{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://info.yukkuricraft.net/schemas/staff.schema.json",
  "title": "YukkuriCraft staff",
  "description": "A schema for YukkuriCraft's staff document",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "displayName": {
        "type": "string"
      },
      "members": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "mcAccounts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "uuid": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                  }
                },
                "required": [
                  "name",
                  "uuid"
                ],
                "additionalProperties": false
              }
            },
            "discordAccount": {
              "oneOf": [
                {
                  "type": "string",
                  "pattern": "\\d+"
                },
                {
                  "type": "null"
                }
              ]
            },
            "avatar": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "mcAccounts",
            "discordAccount"
          ],
          "additionalProperties": false
        }
      }
    },
    "required": [
      "id",
      "displayName",
      "members"
    ],
    "additionalProperties": false
  }
}